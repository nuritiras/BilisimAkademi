@model Aday


<div class="display-6">
    Kursiyer Kayıt
</div>

<form method="post" action="/kurs/kayit">
    <div class="form-group my-2">
        <label>E-Posta</label>
        <input name="Eposta" class="form-control">
    </div>

    <div class="form-group my-2">
        <label>İsim</label>
        <input name="Isim" class="form-control">
    </div>

    <div class="form-group my-2 ">
        <label>Soyisim</label>
        <input name="SoyIsim" class="form-control">
    </div>

    <div class="form-group my-2 ">
        <label>Yaş</label>
        <select name="Yas" class="form-control">
            <option value="21">21</option>
            <option value="22">22</option>
            <option value="23">23</option>
            <option value="24">24</option>
            <option value="25">25</option>
        </select>   
    </div>

    <div>
        <fieldset>
            <legend>Bir Kurs Seçiniz</legend>
            <p>
                <input id="python" type="radio" name="SecilenKurs" value="Python"/>
                <label>Python</label>           
            </p>
            <p>
                <input id="java" type="radio" name="SecilenKurs" value="Java"/>
                <label>Java</label>           
            </p>
            <p>
                <input id="swift" type="radio" name="SecilenKurs" value="Swift"/>
                <label>Swift</label>           
            </p>
        </fieldset>
    </div>

    <div>
        <button class="btn btn-primary" type="submit">Başvuru Yap</button>
        <a class="btn btn-warning" href="/">Anasayfa</a>
    </div>
    
</form>